<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@android:color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:elevation="20dp"
        android:backgroundTint="@android:color/white"
        android:background="@drawable/depression_qn_border">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:id="@+id/heading_view"
            android:background="@color/depression_green"
            android:text="DEPRESSION QUESTIONAIRE"
            android:textSize="30dp"
            android:textColor="@android:color/white"
            android:textAlignment="center"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp"/>

        <TextView
            android:id="@+id/question_text_view"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Are there any changes to your weight?"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:textColor="@android:color/black"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="40dp"/>

        <CheckBox
            android:layout_marginLeft="10dp"
            android:buttonTint="@color/depression_green"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:text="NEVER"
            android:textSize="15dp"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp"/>

        <CheckBox
            android:layout_marginLeft="10dp"
            android:buttonTint="@color/depression_green"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:text="SOMETIMES"
            android:textSize="15dp"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp"/>

        <CheckBox
            android:layout_marginLeft="10dp"
            android:buttonTint="@color/depression_green"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:text="MORE THAN USUAL"
            android:textSize="15dp"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp"/>

        <CheckBox
            android:layout_marginLeft="10dp"
            android:buttonTint="@color/depression_green"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:text="ALWAYS"
            android:textSize="15dp"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="50dp"/>

        <Button
            android:id="@+id/next_btn7"
            android:backgroundTint="@color/btn_green"
            android:background="@drawable/buttonselector"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:text="NEXT"
            android:textColor="@android:color/white"/>

    </LinearLayout>

</LinearLayout>