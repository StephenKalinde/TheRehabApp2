<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/heading_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12 STEPS TO FREEDOM"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_centerHorizontal="true" />

        <Space
            android:id="@+id/space_1"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_below="@+id/heading_view"/>

        <TextView
            android:id="@+id/heading_view_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ANXIETY PROGRAMME"
            android:textSize="16dp"
            android:textColor="@android:color/black"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/space_1"/>

        <Space
            android:id="@+id/space_2"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_below="@+id/heading_view_2"/>

        <TextView
            android:id="@+id/heading_view_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Primary Recovery"
            android:textSize="16dp"
            android:textColor="@android:color/black"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/space_2"/>

        <TextView
            android:id="@+id/heading_view_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Acceptance And Surrender"
            android:textSize="16dp"
            android:textColor="@android:color/black"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/heading_view_3"/>

    </RelativeLayout>>

</RelativeLayout>