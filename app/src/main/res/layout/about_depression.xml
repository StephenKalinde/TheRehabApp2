<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:layout_height="match_parent"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:background="@android:color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp"/>

            <TextView
                android:id="@+id/heading_view_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="ABOUT DEPRESSION"
                android:textColor="@android:color/black"
                android:textSize="30dp"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp"/>

            <TextView
                android:id="@+id/heading_view_2"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Depression:"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/sub_text"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/depression"
                android:textSize="15dp"
                android:textColor="@android:color/black"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="5dp"/>

            <TextView
                android:id="@+id/heading_view_3"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Symptoms:"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/sub_text_2"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="-Feeling Sad"
                android:textSize="15dp"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/sub_text_3"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="-Loss of interest in activities you've once enjoyed"
                android:textSize="15dp"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/sub_text_4"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="-Changes in appetite, weight loss or weigh gain"
                android:textSize="15dp"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/sub_text_5"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="-Loss of energy, increased fatigue"
                android:textSize="15dp"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/sub_text_6"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="-Feeling worthless"
                android:textSize="15dp"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/sub_text_7"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="-Feeling guilty"
                android:textSize="15dp"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/sub_text_8"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="-Difficulty concentrating or making decisions"
                android:textSize="15dp"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/sub_text_9"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="-Thoughts of death or suicide"
                android:textSize="15dp"
                android:textColor="@android:color/black"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="5dp"/>

            <TextView
                android:id="@+id/heading_view_4"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Biochemistry:"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/sub_text_10"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Differences in certain chemicals in the brai may contribute to symptoms of depression"
                android:textSize="15dp"
                android:textColor="@android:color/black"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="5dp"/>

            <TextView
                android:id="@+id/sub_text_11"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Genetics:"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/sub_text_12"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Differences in certain chemicals in the brai may contribute to symptoms of depression"
                android:textSize="15dp"
                android:textColor="@android:color/black"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="5dp"/>

            <TextView
                android:id="@+id/heading_view_5"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Personality:"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/sub_text_13"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="People with low self esteem ,easily overwhelmed by stress, or persimistic appeear to be more prone to experience depression"
                android:textSize="15dp"
                android:textColor="@android:color/black"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="5dp"/>

            <TextView
                android:id="@+id/heading_view_6"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Environmental Factors:"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/sub_text_14"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Continuous exposure to violence, neglect abuse or poverty may cause some people to be more vulnerable to depression. "
                android:textSize="15dp"
                android:textColor="@android:color/black"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="5dp"/>

            <TextView
                android:id="@+id/heading_view"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Psychotherapy:"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/sub_text_15"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Therapy talk"
                android:textSize="15dp"
                android:textColor="@android:color/black"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp"/>

            <Button
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:text="Continue"
                android:textColor="@android:color/white"
                android:background="@drawable/buttonselector"
                android:backgroundTint="@color/btn_green"
                android:id="@+id/continue_btn_depression"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>