<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffc000">

    <!--#ffc000-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="#ffc000">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12 WEEKS TO TERTIARY RECOVERY"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="22dp"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:id="@+id/heading_view"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"/>

        <TextView
            android:id="@+id/text_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pack_3_info"
            android:textSize="20dp"
            android:textColor="@android:color/white"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_below="@+id/heading_view"
            android:textAlignment="center"/>

        <Button
            android:id="@+id/close_btn_3"
            android:layout_height="40dp"
            android:layout_width="100dp"
            android:layout_below="@+id/text_content"
            android:text="CLOSE"
            android:textColor="@android:color/white"
            android:background="@drawable/close_btn_background"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"/>



    </RelativeLayout>

</RelativeLayout>