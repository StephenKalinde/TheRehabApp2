<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FragmentProfile">

        <RelativeLayout
            android:id="@+id/profile_image_layout"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@android:color/black">

            <TextView
                android:id="@+id/mood_heading_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Mood"
                android:textSize="40dp"
                android:textColor="@android:color/white"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/yantramanav"/>

            <TextView
                android:id="@+id/mood_view"
                android:layout_below="@+id/mood_heading_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textColor="@android:color/white"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/yantramanav"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/user_name_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_image_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textSize="30dp"
            android:fontFamily="@font/yantramanav"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>

        <EditText
            android:id="@+id/status_share_view"
            android:layout_below="@+id/user_name_view"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:hint="Share Your Thoughts"
            android:paddingLeft="5dp"
            android:fontFamily="@font/yantramanav"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/darker_gray"
            android:background="@drawable/notes_borders"
            android:singleLine="false"/>

        <Button
            android:id="@+id/submit_btn"
            android:layout_below="@+id/status_share_view"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:fontFamily="@font/yantramanav"
            android:layout_marginRight="30dp"
            android:layout_marginTop="5dp"
            android:text="Share"
            android:textColor="@android:color/white"
            android:background="@color/depression_green"/>

        <RelativeLayout
            android:id="@+id/peers_btn_layout"
            android:layout_width="match_parent"
            android:layout_below="@+id/submit_btn"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:padding="20dp">

            <Button
                android:id="@+id/peers_btn"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:background="@android:color/white"
                android:layout_alignParentRight="true"
                android:elevation="0dp"
                android:text="Peers"
                android:fontFamily="@font/yantramanav"/>

            <Button
                android:id="@+id/messages_btn"
                android:layout_below="@+id/peers_btn"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:background="@android:color/white"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:text="Messages"
                android:fontFamily="@font/yantramanav"/>

            <Button
                android:id="@+id/requests_btn"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_below="@+id/messages_btn"
                android:background="@android:color/white"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:text="Requests"
                android:fontFamily="@font/yantramanav"/>

            <Button
                android:id="@+id/notifications_btn"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_below="@+id/requests_btn"
                android:background="@android:color/white"
                android:layout_alignParentRight="true"
                android:text="Notifications"
                android:layout_marginTop="10dp"
                android:textSize="12dp"
                android:fontFamily="@font/yantramanav"/>

            <Button
                android:id="@+id/my_journal_btn"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_below="@+id/notifications_btn"
                android:background="@android:color/white"
                android:layout_alignParentRight="true"
                android:text="Journal"
                android:layout_marginTop="10dp"
                android:textSize="12dp"
                android:fontFamily="@font/yantramanav"/>

        </RelativeLayout>

    </RelativeLayout>

</ScrollView>