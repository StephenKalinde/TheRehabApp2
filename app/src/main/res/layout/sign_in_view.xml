<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/SignUpView1"
    android:background="@android:color/white">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/logo"
        android:layout_gravity="center"
        android:elevation="20dp"
        android:textColor="@android:color/black"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="@drawable/form_bckgrnd"
        android:elevation="5dp">

        <EditText
            android:id="@+id/name"
            android:textAlignment="center"
            android:hint="Name"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/black"
            android:layout_gravity="center"
            android:background="@null"/>

        <EditText
            android:id="@+id/surname"
            android:textAlignment="center"
            android:hint="Surname"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/black"
            android:layout_gravity="center"
            android:background="@null"/>

        <EditText
            android:id="@+id/cell_number"
            android:textAlignment="center"
            android:hint="Cell Number"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/black"
            android:layout_gravity="center"
            android:background="@null"/>

        <EditText
            android:id="@+id/emailAdd"
            android:hint="Email"
            android:textAlignment="center"
            android:layout_height="40dp"
            android:layout_width="250dp"
            android:layout_gravity="center"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/black"
            android:background="@null"/>

        <EditText
            android:id="@+id/initPassword"
            android:textAlignment="center"
            android:hint="Password"
            android:layout_height="40dp"
            android:layout_width="250dp"
            android:layout_gravity="center"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/black"
            android:background="@null"/>

        <EditText
            android:id="@+id/confirmPassword"
            android:hint="Confirm Password"
            android:textAlignment="center"
            android:layout_height="40dp"
            android:layout_width="250dp"
            android:layout_gravity="center"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/black"
            android:background="@null"/>

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="40dp"/>

    <Button
        android:id="@+id/signUpConfirm"
        android:text="Sign Up"
        android:textColor="@android:color/white"
        android:background="@drawable/buttonselector"
        android:elevation="20dp"
        android:backgroundTint="@color/btn_blue"
        android:layout_height="50dp"
        android:layout_width="120dp"
        android:layout_gravity="center"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already have an account with us?"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_gravity="center"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp"/>

    <Button
        android:id="@+id/login_btn"
        android:text="Login"
        android:textColor="@android:color/white"
        android:background="@drawable/buttonselector"
        android:elevation="20dp"
        android:backgroundTint="@color/btn_green"
        android:layout_height="40dp"
        android:layout_width="100dp"
        android:layout_gravity="center"
        />

</LinearLayout>