<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Toolbar here-->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/peer_profile_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/btn_green"
        android:layout_marginTop="0dp"/>

    <ScrollView
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_below="@+id/peer_profile_toolbar">

        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FragmentProfile">

            <RelativeLayout
            android:id="@+id/profile_image_layout"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@android:color/black">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="30dp"
                android:elevation="10dp"
                android:background="@drawable/profile_img_pic"/>

        </RelativeLayout>

            <TextView
            android:id="@+id/user_name_view"
            android:layout_below="@+id/profile_image_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="NAME HERE"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>

            <EditText
            android:id="@+id/status_share_view"
            android:layout_below="@+id/user_name_view"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:hint="Share Your Thoughts"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/darker_gray"
            android:background="@drawable/notes_borders"/>

            <Button
            android:id="@+id/submit_btn"
            android:layout_below="@+id/status_share_view"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:layout_marginTop="5dp"
            android:text="Share"
            android:textColor="@android:color/white"
            android:background="@color/depression_green"/>

        </RelativeLayout>

    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/new_message_btn"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:backgroundTint="@color/btn_green"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"/>


</RelativeLayout>