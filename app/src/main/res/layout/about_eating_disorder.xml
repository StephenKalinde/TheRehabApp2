<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:layout_height="match_parent"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:background="@android:color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp"/>

            <TextView
                android:id="@+id/heading_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="ABOUT EATING DISORDER"
                android:textColor="@android:color/black"
                android:textSize="25dp"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp"/>

            <TextView
                android:id="@+id/heading_view_2"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Eating Disorder:"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/sub_text"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/eating_disorder"
                android:textSize="15dp"
                android:textColor="@android:color/black"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="5dp"/>

            <TextView
                android:id="@+id/heading_view_3"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Emotional And Behavioral Symptoms:"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/sub_text_2"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="-Frequent dieting"
                android:textSize="15dp"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/sub_text_3"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="-Preoccupation with weight, food, calories, carbohydrates and fat grams"
                android:textSize="15dp"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/sub_text_4"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="-Refusal to eat certain foods"
                android:textSize="15dp"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/sub_text_5"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="-Discomfort eating around others"
                android:textSize="15dp"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/sub_text_6"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="-Food rituals(eats only particular food or food group)"
                android:textSize="15dp"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/sub_text_7"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="-Skipping meals"
                android:textSize="15dp"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/sub_text_8"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="-Constantly checking for perceived plans in mirror"
                android:textSize="15dp"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/sub_text_9"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="-Extreme mood swings"
                android:textSize="15dp"
                android:textColor="@android:color/black"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="5dp"/>

            <TextView
                android:id="@+id/heading_view_4"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:text="Different Eating Disorders"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

            <TextView
                android:id="@+id/heading_view_5"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Binge eating disorder:"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/sub_text_10"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Eats large amounts in a short period of time"
                android:textSize="15dp"
                android:textColor="@android:color/black"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="5dp"/>

            <TextView
                android:id="@+id/heading_view_6"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Anorexia nervosa:"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/sub_text_11"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Eats very little"
                android:textSize="15dp"
                android:textColor="@android:color/black"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="5dp"/>

            <TextView
                android:id="@+id/heading_view_7"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Bulimia nervosa:"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/sub_text_12"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Eats a lot and rids themselves of food"
                android:textSize="15dp"
                android:textColor="@android:color/black"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="5dp"/>

            <TextView
                android:id="@+id/heading_view_8"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Pica:"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/sub_text_13"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Eats non-food items"
                android:textSize="15dp"
                android:textColor="@android:color/black"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="5dp"/>

            <TextView
                android:id="@+id/heading_view_9"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Rumination disorder:"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/sub_text_14"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Regurgitate food"
                android:textSize="15dp"
                android:textColor="@android:color/black"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

            <TextView
                android:id="@+id/heading_view_10"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Avoidant/Restrictive food intake disorder:"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/sub_text_15"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Lack of interest in food"
                android:textSize="15dp"
                android:textColor="@android:color/black"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="5dp"/>

            <TextView
                android:id="@+id/sub_text_16"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Eating disorders are a variety of mental health disorders"
                android:textSize="15dp"
                android:textColor="@android:color/black"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp"/>

            <Button
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:text="Continue"
                android:textColor="@android:color/white"
                android:background="@drawable/buttonselector"
                android:backgroundTint="@color/eating_disorder_purple"
                android:id="@+id/continue_btn1"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>